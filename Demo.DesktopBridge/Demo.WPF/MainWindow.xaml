<Window
    x:Class="Demo.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Demo.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="525"
    Height="380"
    mc:Ignorable="d">
    <StackPanel Margin="20">
        <Button
            Height="40"
            Click="ShowToastClick"
            Content="Show Toast" />
        <TextBox
            x:Name="txtPageMessage"
            Height="40"
            Margin="0,40,0,0" />
        <Button
            Height="40"
            Margin="0,5,0,0"
            Click="OpenUWPPageClick"
            Content="Open UWP Page" />
        <TextBox
            x:Name="txtTileMessage"
            Height="40"
            Margin="0,40,0,0" />
        <Button
            Height="40"
            Margin="0,5,0,0"
            Click="SetTileNotificationClick"
            Content="Set Tile Notification" />
    </StackPanel>
</Window>
